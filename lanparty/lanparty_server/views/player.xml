<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_player_tree">
            <field name="name">view_player_tree</field>
            <field name="model">lanparty_server.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="res_partner_id"/>
                    <field name="barcode"/>
                    <button name="action_barcode_register"
                            type="object"
                            string="Register barcode"
                            class="btn-primary"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_player_form">
            <field name="name">view_player_form</field>
            <field name="model">lanparty_server.player</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_barcode_register"
                                type="object"
                                string="Register barcode"
                                class="btn-primary"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="res_partner_id"/>
                            <field name="barcode"/>
                        </group>
                        <label for="cfg"/>
                        <field name="cfg"
                               class="border border-primary rounded"
                               widget="ace"/>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>
