<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_wizard_seat_player_change_form">
            <field name="name">view_wizard_seat_player_change_form</field>
            <field name="model">lanparty_server.wizard_seat_player_change</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="seat_id"/>
                        </h1>
                        <group>
                            <field name="barcode"/>
                            <field name="player_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object"
                                special="cancel"
                                string="Cancel"
                                class="btn-secondary"/>
                        <button name="action_player_change"
                                type="object"
                                string="Change player"
                                class="btn-primary pull-right"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
