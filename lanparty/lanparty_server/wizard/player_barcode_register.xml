<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_wizard_player_barcode_register_form">
            <field name="name">view_wizard_player_barcode_register_form</field>
            <field name="model">lanparty_server.wizard_player_barcode_register</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="player_id"/>
                        </h1>
                        <group>
                            <field name="barcode"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_skip"
                                type="object"
                                special="cancel"
                                string="Cancel"
                                class="btn-secondary"/>
                        <button name="action_barcode_register"
                                type="object"
                                string="Register barcode"
                                class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
